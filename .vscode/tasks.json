{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "cmake -Htest -Bbuild/test && cmake --build build/test && CTEST_OUTPUT_ON_FAILURE=1 cmake --build build/test --target test"
        },
        {
            "label": "bench",
            "type": "shell",
            "command": [
                "cd bench",
                "&&",
                "g++-10 -g -std=c++17 bench.cpp -O3 -march=native",
                "-isystem benchmark/include -isystem ../include",
                "-Lbenchmark/build/src -lbenchmark -lpthread -o bench",
                "&&",
                "./bench --benchmark_format=csv > bench.csv",
                "&&",
                "cd ${workspaceFolder}"
            ]
        }
    ]
}
